<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp">

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="@dimen/entry_img_width"
        android:layout_height="@dimen/entry_img_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="#00000000"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/main_icon"
        android:layout_toEndOf="@+id/main_icon">

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@android:id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/colorReadState"
                    android:text="Title"
                    android:textIsSelectable="false"/>
                <TextView
                    android:id="@+id/text2hor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:drawablePadding="3dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/colorReadState"
                    android:text="info"
                    android:paddingLeft="10dp"
                    android:textIsSelectable="false"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/colorReadState"
            android:text="info"
            android:textIsSelectable="false"/>
        <TextView
            android:id="@+id/textSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawablePadding="3dp"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorReadState"
            android:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text "
            android:textIsSelectable="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/mobilized_icon"
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:alpha="0.5"
        android:src="@drawable/disket_gray"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/read_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:paddingRight="5dp"
                android:alpha="0.5"
                android:src="@drawable/rounded_checbox_gray" />

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:paddingRight="5dp"
                android:alpha="0.5"
                android:src="@drawable/star_yellow" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>