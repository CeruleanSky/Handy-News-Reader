<FrameLayout
    android:id="@+id/layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/swype_btn_toggle_read"
        android:layout_width="@dimen/entry_img_width"
        android:layout_height="@dimen/entry_img_height"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/rounded_checbox_gray"
        android:visibility="visible"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/swype_btn_toggle_star"
        android:layout_width="@dimen/entry_img_width"
        android:layout_height="@dimen/entry_img_height"
        android:layout_gravity="center_vertical|right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/star_empty_gray"
        android:visibility="visible"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:id="@+id/layout_ontouch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_vertval"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_background">
            <LinearLayout
                android:id="@+id/layout_with_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/main_icon_layout"
                    android:layout_width="@dimen/entry_img_width"
                    android:layout_height="@dimen/entry_img_height"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:id="@+id/main_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:src="#00000000"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/new_icon"
                        android:layout_width="@dimen/entry_new_icon_size"
                        android:layout_height="@dimen/entry_new_icon_size"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_entry_icon" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:id="@+id/textLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@android:id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="3dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="5"
                            android:textColor="?attr/colorReadState"
                            android:text="Title may be vvery longvery longvery longery longvery longvery longvery longvery longvery longvery longvery longvery longvery longvery longvery longvery longvery long"
                            android:textIsSelectable="false" />
                        <TextView
                            android:id="@+id/textDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:drawablePadding="3dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/colorReadState"
                            android:text="date"
                            android:paddingLeft="10dp"
                            android:textIsSelectable="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/text2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@android:id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:drawablePadding="3dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="?attr/colorReadState"
                            android:text="info"
                            android:textIsSelectable="false"/>
                        <TextView
                            android:id="@+id/textAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:drawablePadding="3dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="?attr/colorReadState"
                            android:text="author"
                            android:paddingLeft="10dp"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/textUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:drawablePadding="3dp"
                android:singleLine="false"
                android:textColor="?attr/colorReadState"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="url url url url url url url url url url url url url url url url url url url url url url url url  "
                android:textIsSelectable="false"/>
            <TextView
                android:id="@+id/textSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:drawablePadding="3dp"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/colorReadState"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text "
                android:textIsSelectable="false"/>
        </LinearLayout>

        <include layout="@layout/item_entry_list_btn"/>

    </FrameLayout>

</FrameLayout>