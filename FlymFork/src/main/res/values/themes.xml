<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_primary</item>
        <item name="colorReadState">@color/light_read_state</item>
        <item name="colorPrefBackground">#CCCCCC</item>
    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/dark_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_primary</item>
        <item name="colorReadState">@color/dark_read_state</item>
        <item name="colorPrefBackground">#555555</item>
    </style>

    <style name="TapZone" >
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="TapZoneBtn" parent="TapZone" >
        <item name="android:layout_width">10mm</item>
        <item name="android:layout_height">10mm</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/round_background</item>

    </style>
    <style name="FeedAttrEdit" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:hint">@string/one_webpage_edittext_classname_hint</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="FeedAttrLabel" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:hint">@string/one_webpage_edittext_classname_hint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="PrefCat" >
        <item name="android:background">#FFAAAAAA</item>

    </style>
</resources>
